<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Top: Summary stats -->
    <top>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>

                <Label text="Total Work Hours:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="totalHoursLabel" text="0" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Projects Worked On:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="projectsCountLabel" text="0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Avg Hours/Project:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="avgHoursLabel" text="0.0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        </GridPane>
    </top>

    <!-- Center: Table of projects -->
    <center>

    </center>

    <!-- Bottom: Navigation button -->
    <bottom>
        <Button fx:id="projectsButton" text="Projects" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" bottom="10.0"/>
            </padding>
        </Button>
    </bottom>

</BorderPane>
